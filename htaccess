<IfModule mod_rewrite.c>
	RewriteEngine On
    
    #RewriteCond %{REQUEST_FILENAME} -f [OR]
    #RewriteCond %{REQUEST_FILENAME} -d
    
    RewriteRule ^api.php?(.*)$ api/api.php?$1 [QSA, L]
    
    RewriteRule ^legacy/?$ - [F]
    RewriteRule ^downloads$ legacy/downloads/index.php [QSA, L]
    RewriteRule ^$ legacy/index.php [L]

    #RewriteRule \.(?:css|js|jpe?g|gif|png|tpl)$ - [L]

</IfModule>